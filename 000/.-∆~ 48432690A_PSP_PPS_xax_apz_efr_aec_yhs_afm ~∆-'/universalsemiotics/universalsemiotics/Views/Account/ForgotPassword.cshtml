@model universalsemiotics.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = Resources.universalsemiotics.olvido_contrasenia;
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary("", new { @class = "text-danger", @style = "display:initial;" })
    <div class="form-group">
        @*@Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label" })*@
        <label class="col-md-12 control-label" style="display:initial;">@(Resources.universalsemiotics.correo_electronico)</label>
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control text-center", @style = "display:initial;" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" class="btn btn-primary" value="@(Resources.universalsemiotics.email_enviar)" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
