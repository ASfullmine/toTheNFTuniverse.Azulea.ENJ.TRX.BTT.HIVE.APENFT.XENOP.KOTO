<form id="__AjaxAntiForgeryForm" action="#" method="post">@Html.AntiForgeryToken()</form>

<input id="file" type="file" name="file" accept=".epub, .pdf" />
<button id="epubB" class="btn btn-primary">leer EPUB o PDF</button>


