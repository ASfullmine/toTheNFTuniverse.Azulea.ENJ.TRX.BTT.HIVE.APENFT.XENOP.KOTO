
@{
    ViewBag.Title = "Descargas";
    universalsemiotics.Models.MP3sModel modelFree = Model;
}

<div class="row">
    <div class="col-md-12">
        <h1>Professional Conversions</h1>
        <p>(The files will be deleted after 7 days from their conversion, the period in process does not apply to this temporality)</p>
    </div>
</div>

@if (modelFree.DescargasPro == null || modelFree.DescargasPro.Count == 0)
{
    <div class="row">
        <div class="col-md-12">
            <p>(You don't have any conversions yet)</p>
        </div>
    </div>
}
else
{
    foreach (universalsemiotics.Models.MP3ProModel d in modelFree.DescargasPro)
    {
        if (d.EnProceso)
        {
            <div class="row">
                <div class="col-md-12">
                    <br /><p style="font-size:25px;"><b class='text-success'>@String.Format("{0:dd/MM/yyyy HH:mm}", d.Fecha)</b> <label>Your @d.Titulo file is converting</label> <a class="btn btn-primary" href="javascript:window.location.reload()">Update</a></p>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <br /><p style="font-size:25px;">@Html.Raw(String.Concat("<b class='text-success'>", String.Format("{0:dd/MM/yyyy HH:mm}", d.Fecha), " </b>")) <a href="~/en/DownloadPro?id=@(d.Id)" target="_blank" download="@(d.Titulo.Replace("\"","_")).mp3">@(d.Titulo).mp3</a></p>
                </div>
            </div>
        }
    }
}
<br/>
<br />
<div class="row">
    <div class="col-md-12">
        <h1>Free Conversions</h1>
        <p>(The files will be deleted after 2 days of conversion, the queued period does not apply to this temporality)</p>
    </div>
</div>

@if (modelFree.DescargasFree == null || modelFree.DescargasFree.Count == 0)
{
    <div class="row">
        <div class="col-md-12">
            <p>(You don't have any conversions yet)</p>
        </div>
    </div>
}
else
{
    foreach (universalsemiotics.Models.MP3FreeModel d in modelFree.DescargasFree)
    {
        if (d.EnCola)
        {
            <div class="row">
                <div class="col-md-12">
                    <br /><p style="font-size:25px;"><b class='text-success'>@String.Format("{0:dd/MM/yyyy HH:mm}", d.Fecha)</b> <label>your @d.Titulo file is queued ... It's got @d.Cola files ahead of you</label> <a class="btn btn-primary" href="javascript:window.location.reload()">Update</a></p>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <br /><p style="font-size:25px;">@Html.Raw(String.Concat("<b class='text-success'>", String.Format("{0:dd/MM/yyyy HH:mm}", d.Fecha), " </b>")) <a href="~/en/Download?id=@(d.Id)" target="_blank" download="@(d.Titulo.Replace("\"","_")).mp3">@(d.Titulo).mp3</a></p>
                </div>
            </div>
        }
    }
}
