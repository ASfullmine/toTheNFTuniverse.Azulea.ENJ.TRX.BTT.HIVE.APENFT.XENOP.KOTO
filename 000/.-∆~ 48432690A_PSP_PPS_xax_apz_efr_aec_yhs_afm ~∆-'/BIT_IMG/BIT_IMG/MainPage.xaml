<Page
    x:Class="BIT_IMG.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BIT_IMG"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="LightSkyBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>            
        </Grid.RowDefinitions>

        <!-- HEAD SECTION -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>                
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="BIT IMG" FontSize="33" FontWeight="ExtraBold" HorizontalAlignment="Left" Foreground="Gold"/>

            <HyperlinkButton Grid.Column="1" HorizontalAlignment="Right" Content="apzyxGames" NavigateUri="http://apzyxGames.azurewebsites.net"
                         FontWeight="Bold" Margin="3" Foreground="White"/>
                        
        </Grid>

        <!-- BINARY SECTION -->
        
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>                
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Copy binary text here:" HorizontalAlignment="Left" Foreground="White" Margin="3"/>
                <Button x:Name="btnReverseText" Content="REVERSE TEXT" Click="btnReverseText_Click"
                        HorizontalAlignment="Center" Margin="3" Background="White"/>
                <Button x:Name="btnComplementOne" Content="ONEs COMPLEMENT" Click="btnComplementOne_Click"
                        HorizontalAlignment="Center" Margin="3" Background="White"/>
                
            </StackPanel>
            

            <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <TextBox  x:Name="txtBinary" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ScrollViewer.VerticalScrollMode="Auto" Margin="3" AcceptsReturn="True" TextWrapping="Wrap"/>
            </ScrollViewer>


        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
                        
            <Border Grid.Row="0" Grid.RowSpan="4" Grid.Column="1" BorderBrush="Transparent" BorderThickness="1" Background="LightSkyBlue">
                <Viewbox Width="300" Height="300" Stretch="Uniform" StretchDirection="DownOnly">
                    <Image x:Name="imgMAIN" Height="300" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Source="/Assets/270x270COLOR.png" />
                </Viewbox>
            </Border>

            <Button Grid.Row="0"  Grid.RowSpan="4" Grid.Column="1" Margin="3" x:Name="btnCreateImg" Content="CREATE NEW IMAGE" Foreground="Green"
                    VerticalAlignment="Top" HorizontalAlignment="Center" Click="btnCreateImg_Click" Background="White" FontWeight="Bold"/>
                                    
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Pixels width:" Foreground="White" Margin="3" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtWidth" Text="100" IsEnabled="False" Margin="3"/>
                </StackPanel>

                <CheckBox x:Name="cbSquareRootWidth" FlowDirection="LeftToRight" IsChecked="True" Background="White"
                             HorizontalAlignment="Center" Foreground="White" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" Margin="3">
                    <TextBlock Text="Square Root Width" Foreground="White"/>
                </CheckBox>
                
            </StackPanel>
            
            <StackPanel x:Name="spRBcChannel" Grid.Row="2" Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="RGBA Color Channel:" 
                           HorizontalAlignment="Left" Foreground="White" Margin="3"/>
                <RadioButton GroupName="rbcChannel" Content="2 Bits" Tag="2" IsChecked="True"
                             HorizontalAlignment="Center" Foreground="White" Margin="3"/>
                <RadioButton GroupName="rbcChannel" Content="4 Bits" Tag="4" IsChecked="False"
                             HorizontalAlignment="Center" Foreground="White" Margin="3"/>
                <RadioButton GroupName="rbcChannel" Content="8 Bits" Tag="8" IsChecked="False"
                             HorizontalAlignment="Center" Foreground="White" Margin="3"/>
            </StackPanel>

            <StackPanel x:Name="spRBRepresentation" Grid.Row="3" Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Image Representation:" 
                           HorizontalAlignment="Left" Foreground="White" Margin="3"/>
                <RadioButton GroupName="rbRepresentation" Content="Normal" Tag="N1" IsChecked="True"
                             HorizontalAlignment="Center" Foreground="White" Margin="3" Checked="RBNORMAL01_Checked"/>
                <RadioButton GroupName="rbRepresentation" Content="Near" Tag="N2" IsChecked="False"
                             HorizontalAlignment="Center" Foreground="White" Margin="3" Checked="RBNORMAL02_Checked"/>
                <RadioButton GroupName="rbRepresentation" Content="Spiral01" Tag="S1" IsChecked="False"
                             HorizontalAlignment="Center" Foreground="White" Margin="3" Checked="RBSPIRAL01_Checked"/>
                <RadioButton GroupName="rbRepresentation" Content="Spiral02" Tag="S2" IsChecked="False"
                             HorizontalAlignment="Center" Foreground="White" Margin="3" Checked="RBSPIRAL02_Checked"/>
            </StackPanel>

            <!-- RIGTH BUTTONS IMAGE CREATE/VIEW/SAVE -->
            <StackPanel Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">                
                <Button Margin="3" x:Name="btnViewImg" Content="VIEW"
                    HorizontalAlignment="Center" Click="btnViewImg_Click" Background="White"/>
                <Button Margin="3" x:Name="btnSaveImg" Content="SAVE"
                    HorizontalAlignment="Center" Click="btnSaveImg_Click" Background="White"/>
            </StackPanel>
            

        </Grid>

    </Grid>
</Page>
