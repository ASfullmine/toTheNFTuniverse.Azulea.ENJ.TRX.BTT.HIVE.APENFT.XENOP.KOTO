@model textoamp3.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar contraseña - ";
}

<h2>Cambiar contraseña</h2>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Formulario para cambiar contraseña</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-12 control-label" })
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @style = "display:initial;" })
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-12 control-label" })
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @style = "display:initial;" })
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "display:initial;" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <br/><input type="submit" value="Cambiar contraseña" class="btn btn-primary" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}