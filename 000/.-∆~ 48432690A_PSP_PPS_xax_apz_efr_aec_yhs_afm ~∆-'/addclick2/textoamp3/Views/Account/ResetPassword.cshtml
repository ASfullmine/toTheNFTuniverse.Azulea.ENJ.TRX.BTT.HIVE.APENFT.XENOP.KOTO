@model textoamp3.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Restablecer contraseña - ";
}

<h1>Restablecer contraseña</h1>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Restablezca la contraseña.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Code)
    <div class="row">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label" })
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "display:initial;" })
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-12 control-label" })
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "display:initial;" })
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "display:initial;" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" class="btn btn-primary" value="Restablecer" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
