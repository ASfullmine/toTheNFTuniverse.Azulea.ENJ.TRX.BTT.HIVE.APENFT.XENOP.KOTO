@model textoamp3.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse - ";
}

<h1>Registrarse</h1>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Cree una cuenta nueva.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label" })
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "display:initial;" })
        </div>
    </div>
    @*<div class="row">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-12 control-label" })
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>*@
    <div class="row">
        <div class="col-md-12">
            <br />
            <input type="submit" class="btn btn-primary" value="Registrarse" />
        </div>
    </div>
    <br /><br />
    <p>
        @Html.ActionLink("¿No recibió su contraseña?", "ForgotPassword")
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
