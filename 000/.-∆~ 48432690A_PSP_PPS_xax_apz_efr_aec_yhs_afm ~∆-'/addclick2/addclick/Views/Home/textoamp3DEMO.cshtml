
<form action="~/Home/DEMOtextoamp3" method="post">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <h2>Opción DEMO</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h3>E-Mail:</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input required name="email" type="text" style="width:300px;" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>Título del archivo mp3:</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input required name="titulo" type="text" style="width:200px;" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h3>Su texto DEMO</h3><p>(max 500 caracteres + publicidad):</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <textarea required name="texto" maxlength="500" style="height:250px;width:350px;"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <br />
                    <input type="submit" class="btn btn-default" value="convertir a MP3 - DEMO" />
                    <br /><br />
                    <p>(Datos en su correo electrónico)</p>
                </div>
            </div>
        </div>
    </div>
</form> 
