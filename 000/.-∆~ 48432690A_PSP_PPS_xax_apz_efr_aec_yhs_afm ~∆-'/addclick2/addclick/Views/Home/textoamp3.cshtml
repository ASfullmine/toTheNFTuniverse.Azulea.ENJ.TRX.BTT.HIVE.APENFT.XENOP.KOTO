@{
    ViewBag.Title = "CONVERTIR";
}
<form action="~/Home/textoamp3" method="post">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <h2>CONVERTIR</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h3>@(Session["email"] != null ? Session["email"] : "")</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>Título del archivo mp3:</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input required name="titulo" type="text" style="width:200px;" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h3>Su texto (Copie y Pegue)</h3><p>(El coste del archivo dependerá del número de caracteres, no tiene publicidad):</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <textarea required name="texto" style="width:600px;height:300px;"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <br />
                    <input type="submit" class="btn btn-default" value="convertir a MP3" />
                    <br /><br />
                    <p>(Deberá disponer del saldo necesario en su cuenta para la conversión)</p>
                </div>
            </div>
        </div>
    </div>
</form>
