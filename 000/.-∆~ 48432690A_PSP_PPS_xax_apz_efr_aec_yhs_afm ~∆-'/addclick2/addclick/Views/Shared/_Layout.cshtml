<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - textoamp3.com</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("textoamp3.com", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div> <!--class="navbar-collapse collapse">-->
                <ul class="nav navbar-nav">
                    @if (!Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("DEMO", "textoamp3DEMO", "Home")</li>
                    }
                    else
                    {
                        <li> @Html.ActionLink("CONVERTIR", "textoamp3", "Home") </li>
                        <li> @Html.ActionLink("DESCARGAS", "textoamp3", "Home") </li>
                        <li> @Html.ActionLink("Mis datos", "Data", "Login") </li>
                    }
                    <li>@Html.ActionLink("Acerca", "About", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Cerrar sesión", "LogOut", "Login")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Iniciar sesión", "Login", "Login")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="text-align:center;">
        
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - textoamp3.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
