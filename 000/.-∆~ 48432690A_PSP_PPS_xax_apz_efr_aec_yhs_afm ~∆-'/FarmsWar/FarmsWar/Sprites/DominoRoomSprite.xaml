<UserControl
    x:Class="FarmsWar.Sprites.DominoRoomSprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FarmsWar.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:converters="using:FarmsWar.Converters"
    d:DesignHeight="200"
    d:DesignWidth="200">

    <Grid Height="200" Width="200">
        <Grid.Resources>
            <converters:DIctionaryInt16BooleanToString x:Key="DIctionaryInt16BooleanToStringC" />
            <converters:RoomToBackgroudColor x:Key="RoomToBackgroudColorC" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Row="0" Grid.Column="1" Tag="0"
                Background="{Binding Converter={StaticResource RoomToBackgroudColorC}, ConverterParameter=0, Mode=OneWay}"
                Content="{Binding Converter={StaticResource DIctionaryInt16BooleanToStringC}, ConverterParameter=0, Mode=OneWay}"                
                HorizontalAlignment="Center" Click="Button_Click"/>
            

        <Button Grid.Row="1" Grid.Column="0" Tag="1" RenderTransformOrigin="0.5,0.5"
                Background="{Binding Converter={StaticResource RoomToBackgroudColorC}, ConverterParameter=1, Mode=OneWay}"
                Content="{Binding Converter={StaticResource DIctionaryInt16BooleanToStringC}, ConverterParameter=1, Mode=OneWay}"
                VerticalAlignment="Center" Click="Button_Click">
            <Button.RenderTransform>
                <RotateTransform Angle="-90"/>
            </Button.RenderTransform>
        </Button>
            
        <Rectangle Grid.Row="1" Grid.Column="1" Width="75" Height="75" Fill="DarkGreen" Margin="10" StrokeThickness="2" Stroke="Black" />

        <Button Grid.Row="1" Grid.Column="2" Tag="3" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center"
                Background="{Binding Converter={StaticResource RoomToBackgroudColorC}, ConverterParameter=3, Mode=OneWay}"
                Content="{Binding Converter={StaticResource DIctionaryInt16BooleanToStringC}, ConverterParameter=3, Mode=OneWay}"                    
                Click="Button_Click">
            <Button.RenderTransform>
                <RotateTransform Angle="90"/>
            </Button.RenderTransform>
        </Button>

        <Button Grid.Row="2" Grid.Column="1" Tag="2"
                Background="{Binding Converter={StaticResource RoomToBackgroudColorC}, ConverterParameter=2, Mode=OneWay}"
                Content="{Binding Converter={StaticResource DIctionaryInt16BooleanToStringC}, ConverterParameter=2, Mode=OneWay}"
                HorizontalAlignment="Center" Click="Button_Click"/>

    </Grid>
</UserControl>
