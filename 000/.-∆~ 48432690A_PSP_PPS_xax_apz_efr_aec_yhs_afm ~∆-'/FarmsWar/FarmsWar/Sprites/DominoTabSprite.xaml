<UserControl
    x:Class="FarmsWar.Sprites.DominoTabSprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FarmsWar.Sprites"
    xmlns:converters="using:FarmsWar.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RenderTransformOrigin="0.5,0.5" d:DesignHeight="66" d:DesignWidth="33">

    <Grid x:Name="dtGrid" Background="White" Width="33" Height="66">
        <Grid.Resources>
            <converters:NumTabToVisibilityConverter x:Key="NumTabToVisibilityConverter" />
            <converters:BooleanBlackBackgroundColor x:Key="BooleanBlackBackgroundColorC" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="33"/>
            <RowDefinition Height="33"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" Background="{Binding Path=IsBlack, Converter={StaticResource BooleanBlackBackgroundColorC}}">
            <Grid Margin="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Ellipse Grid.Row="0" Grid.Column="0" Margin="1" Fill="Black" Visibility="{Binding Path=Values[0], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=00, Mode=OneWay}" />
                <Ellipse Grid.Row="0" Grid.Column="1" Margin="1" Fill="Black" Visibility="{Binding Path=Values[0], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=01, Mode=OneWay}" />
                <Ellipse Grid.Row="0" Grid.Column="2" Margin="1" Fill="Black" Visibility="{Binding Path=Values[0], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=02, Mode=OneWay}" />
                <Ellipse Grid.Row="1" Grid.Column="0" Margin="1" Fill="Black" Visibility="{Binding Path=Values[0], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=10, Mode=OneWay}" />
                <Ellipse Grid.Row="1" Grid.Column="1" Margin="1" Fill="Black" Visibility="{Binding Path=Values[0], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=11, Mode=OneWay}" />
                <Ellipse Grid.Row="1" Grid.Column="2" Margin="1" Fill="Black" Visibility="{Binding Path=Values[0], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=12, Mode=OneWay}" />
                <Ellipse Grid.Row="2" Grid.Column="0" Margin="1" Fill="Black" Visibility="{Binding Path=Values[0], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=20, Mode=OneWay}" />
                <Ellipse Grid.Row="2" Grid.Column="1" Margin="1" Fill="Black" Visibility="{Binding Path=Values[0], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=21, Mode=OneWay}" />
                <Ellipse Grid.Row="2" Grid.Column="2" Margin="1" Fill="Black" Visibility="{Binding Path=Values[0], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=22, Mode=OneWay}" />
                

                <!--<TextBlock Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Path=Values[0]}"/>-->

            </Grid>                        
        </Border>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1"  Background="{Binding Path=IsBlack, Converter={StaticResource BooleanBlackBackgroundColorC}}">
            <Grid Margin="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Ellipse Grid.Row="0" Grid.Column="0" Margin="1" Fill="Black" Visibility="{Binding Path=Values[1], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=00, Mode=OneWay}" />
                <Ellipse Grid.Row="0" Grid.Column="1" Margin="1" Fill="Black" Visibility="{Binding Path=Values[1], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=01, Mode=OneWay}" />
                <Ellipse Grid.Row="0" Grid.Column="2" Margin="1" Fill="Black" Visibility="{Binding Path=Values[1], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=02, Mode=OneWay}" />
                <Ellipse Grid.Row="1" Grid.Column="0" Margin="1" Fill="Black" Visibility="{Binding Path=Values[1], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=10, Mode=OneWay}" />
                <Ellipse Grid.Row="1" Grid.Column="1" Margin="1" Fill="Black" Visibility="{Binding Path=Values[1], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=11, Mode=OneWay}" />
                <Ellipse Grid.Row="1" Grid.Column="2" Margin="1" Fill="Black" Visibility="{Binding Path=Values[1], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=12, Mode=OneWay}" />
                <Ellipse Grid.Row="2" Grid.Column="0" Margin="1" Fill="Black" Visibility="{Binding Path=Values[1], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=20, Mode=OneWay}" />
                <Ellipse Grid.Row="2" Grid.Column="1" Margin="1" Fill="Black" Visibility="{Binding Path=Values[1], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=21, Mode=OneWay}" />
                <Ellipse Grid.Row="2" Grid.Column="2" Margin="1" Fill="Black" Visibility="{Binding Path=Values[1], Converter={StaticResource NumTabToVisibilityConverter}, ConverterParameter=22, Mode=OneWay}" />
                <!--<TextBlock Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Path=Values[1]}"/>-->
            </Grid>
        </Border>
        

    </Grid>
</UserControl>
