<Page
    x:Class="apzyxGames.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:apzyxGames"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gold" Text="apzyxGames" Margin="5"/>
        <HyperlinkButton Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Content="apzyzGames.azurewebsites.net" NavigateUri="https://apzyxGames.azurewebsites.net" Foreground="White" Margin="3"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Vertical">
            <Button HorizontalAlignment="Center" x:Name="Juegos" Content="Juegos" Background="Black" Foreground="Gold"
                    Click="Juegos_Click"/>
            <Button HorizontalAlignment="Center" x:Name="Inventario" Content="Inventario" Background="Black" Foreground="Gold"
                    Click="Inventario_Click"/>
            <Button HorizontalAlignment="Center" x:Name="Perfil" Content="Perfil" Background="Black" Foreground="Gold"
                    Click="Perfil_Click"/>
            <Button HorizontalAlignment="Center" x:Name="j006" Content=" =) " Background="Black" Foreground="Gold"
                    Click="j006_Click"/>
            <Button HorizontalAlignment="Center" x:Name="Creditos" Content="Créditos" Background="Black" Foreground="Gold" 
                    Click="Creditos_Click"/>
        </StackPanel>
        
        <Canvas Grid.Row="1" Grid.Column="1" x:Name="GBoard" Background="DarkGreen" />

    </Grid>
</Page>
